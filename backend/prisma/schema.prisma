generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Event {
  id          String    @id @default(uuid())
  title       String
  image       String?
  description String
  date        DateTime
  time        String
  location    String
  capacity    Int
  createdAt   DateTime  @default(now())

  bookings    Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  bookedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
}